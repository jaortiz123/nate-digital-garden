---
import Button from './Button.astro';
---

<!-- Asymmetrical hero that breaks template conventions -->
<section class="relative min-h-screen overflow-hidden bg-surface-primary">
  <!-- Premium gradient overlay system -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-accent-secondary/8 rounded-full blur-2xl"></div>
    <div class="absolute top-1/2 left-0 w-64 h-64 bg-accent-active/5 rounded-full blur-xl"></div>
  </div>

  <!-- Asymmetrical grid layout - breaks center-aligned template pattern -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 pt-32 pb-20 min-h-screen">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-center min-h-[calc(100vh-208px)]">
      
      <!-- Content area - intentionally left-weighted for asymmetry -->
      <div class="lg:col-span-7 lg:col-start-1 space-y-8">
        
        <!-- Overline for context -->
        <div class="text-overline text-accent-primary">
          Strategic AI Intelligence
        </div>
        
        <!-- Hero title with sophisticated typography hierarchy -->
        <h1 class="text-6xl lg:text-8xl xl:text-9xl font-bold text-content-primary leading-[0.9] tracking-tight">
          <span class="relative inline-block">
            <span class="relative z-10">The Signal.</span>
            <!-- Custom underline accent -->
            <div class="absolute bottom-2 left-0 w-full h-4 lg:h-6 bg-gradient-to-r from-accent-primary/30 to-accent-secondary/30 -rotate-1 rounded-sm"></div>
          </span>
          <br/>
          <span class="text-content-secondary bg-gradient-to-r from-content-secondary to-content-tertiary bg-clip-text text-transparent">Not the Noise.</span>
        </h1>
        
        <!-- Primary value proposition with hierarchy -->
        <div class="space-y-6 max-w-2xl">
          <p class="text-2xl lg:text-3xl text-content-secondary font-medium leading-relaxed tracking-tight">
            Strategic AI insights for people who demand<br/>
            <span class="text-white font-black">substance over hype.</span>
          </p>
          
          <p class="text-xl text-content-tertiary leading-relaxed font-light">
            Real frameworks. Measurable results. From someone who's built products for 100M+ users.
          </p>
        </div>
        
        <!-- Social proof element -->
        <div class="flex items-center space-x-4 text-caption text-content-quaternary">
          <div class="flex -space-x-2">
            <div class="w-8 h-8 bg-gradient-to-br from-accent-primary to-accent-secondary rounded-full border-2 border-surface-primary"></div>
            <div class="w-8 h-8 bg-gradient-to-br from-accent-secondary to-accent-active rounded-full border-2 border-surface-primary"></div>
            <div class="w-8 h-8 bg-gradient-to-br from-accent-active to-accent-primary rounded-full border-2 border-surface-primary"></div>
          </div>
          <span>Join 15,000+ strategic leaders</span>
        </div>
        
        <!-- CTA section with sophisticated button treatment -->
        <div class="flex flex-col sm:flex-row gap-3 pt-3">
          <Button href="#newsletter" variant="primary" size="lg" class="group transform hover:scale-105 shadow-2xl shadow-accent-primary/25">
            <span>Read Premium Insights</span>
            <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </Button>
          
          <Button href="#essays" variant="secondary" size="lg" class="hover:scale-105 transform transition-transform">
            Browse Framework Library
          </Button>
        </div>
      </div>
      
      <!-- Visual element area - intentionally smaller for asymmetry -->
      <div class="lg:col-span-5 lg:col-start-8 relative">
        <!-- Sophisticated visual element that's not a generic image -->
        <div class="relative">
          <!-- Abstract geometric composition -->
          <div class="absolute top-0 right-0 w-72 h-72 opacity-60">
            <div class="absolute inset-0 border border-accent-primary/20 rounded-3xl transform rotate-6"></div>
            <div class="absolute inset-4 border border-accent-secondary/30 rounded-2xl transform -rotate-3"></div>
            <div class="absolute inset-8 bg-gradient-to-br from-accent-primary/10 to-accent-secondary/10 rounded-xl transform rotate-1"></div>
            
            <!-- Floating elements for visual interest -->
            <div class="absolute top-8 left-8 w-12 h-12 bg-accent-primary/20 rounded-lg transform rotate-45"></div>
            <div class="absolute bottom-16 right-12 w-8 h-8 bg-accent-secondary/30 rounded-full"></div>
            <div class="absolute top-1/2 right-4 w-6 h-6 bg-accent-active/25 rounded"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>