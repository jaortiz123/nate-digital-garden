---
// src/components/Button.astro
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  class?: string;
  target?: string;
}
const { href, variant = 'outline', class: className, target } = Astro.props;

// Defines the color schemes for each button type as per your directive.
const variantClasses = {
  primary: "bg-brand-blue text-white",      // Seahawks blue face, white text
  secondary: "bg-white text-brand-blue", // White face, blue text
  outline: "bg-white text-black",         // White face, black text
};
---
<a
  href={href}
  class:list={[
    "inline-block border-3 border-black p-3.5 px-8 font-bold uppercase tracking-wider transition-all duration-150 ease-out",
    "shadow-[6px_6px_0_#121212] hover:shadow-[3px_3px_0_#121212] hover:translate-x-[3px] hover:translate-y-[3px]",
    variantClasses[variant],
    className
  ]}
  target={target}
>
  <slot />
</a>

<style>
  /* A minor tweak to ensure border-width is consistent */
  .border-3 {
    border-width: 3px;
  }
</style>
