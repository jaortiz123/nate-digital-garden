---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/SectionHeading.astro';

const siteTitle = "About Nate B. Jones";
---
<Layout title={siteTitle}>
  <main>
    <section class="hero-section">
      <div class="container mx-auto text-center">
        <h1 class="hero-title font-geograph-black text-5xl md:text-6xl lg:text-7xl leading-tight tracking-tight mx-auto max-w-4xl">
          About Nate B. Jones
        </h1>
        <p class="mt-6 text-lg md:text-xl text-secondary leading-relaxed max-w-3xl mx-auto">
          Product leader, AI builder, and essayist. I help teams and individuals navigate ambiguity and leverage AI to build better products, faster.
        </p>
      </div>
    </section>
    <section class="py-20">
      <div class="container mx-auto text-center">
        <SectionHeading>Bio</SectionHeading>
        <div class="card card-editorial max-w-3xl mx-auto">
          <p class="text-secondary leading-relaxed mb-6">Nate has shipped products for 100M+ users at Amazon and Drift. He writes about AI, product strategy, and building high-performance teams. His work focuses on actionable frameworks and real-world results.</p>
          <p class="text-secondary leading-relaxed">He is available for speaking, workshops, and consulting. <a href="mailto:nate@example.com" class="text-cyan-400 font-bold">Get in touch â†’</a></p>
        </div>
      </div>
    </section>
  </main>
</Layout>
