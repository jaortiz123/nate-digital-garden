---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import TopPosts from '../components/TopPosts.astro';
---

<BaseLayout
  title="Nate B. Jones | AI & Product"
  description="Writing with curiosity about product, tech, and life."
>
  <Hero />
  
  <TopPosts />

  <section class="mt-16">
    <h2 class="mb-6 text-2xl md:text-3xl font-bold tracking-tighter">Other Services & Live Projects</h2>
    <div class="grid md:grid-cols-2 gap-6">
       <div class="block p-6 border border-gray-200 rounded-lg">
          <h3 class="text-xl text-gray-900 mb-2 font-bold">Speaking & Workshops</h3>
          <p class="text-gray-600">Engaging keynotes and hands-on workshops on AI strategy and agentic workflows.</p>
        </div>
        <div class="block p-6 border border-gray-200 rounded-lg">
          <h3 class="text-xl text-gray-900 mb-2 font-bold">Advisory</h3>
          <p class="text-gray-600">Helping teams navigate the AI landscape, from product strategy to implementation.</p>
        </div>
    </div>
  </section>
</BaseLayout>