---
// src/pages/index.astro
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/Button.astro';
import SectionHeading from '@/components/SectionHeading.astro';
import Card from '@/components/Card.astro';
import SubstackCard from '@/components/SubstackCard.astro';
import FeaturedCard from '@/components/FeaturedCard.astro';
import topPosts from '@/content/top_posts.json';
import recentPosts from '@/content/recent_posts.json';

const toolkitLinks = [
  { name: "My Guide to AI & Careers", url: "/toolkit" },
  { name: "Get My AI Prompts", url: "/toolkit" },
  { name: "AI Robot Club", url: "/toolkit" },
  { name: "My AI Projects", url: "/toolkit" },
  { name: "My Story", url: "/toolkit" },
  { name: "Get In Touch", url: "/toolkit" },
];
---
<Layout>
  <main>
    <!-- HERO: Commanding Brand Presence - MOBILE PREMIUM -->
    <section class="relative overflow-hidden py-24 md:py-32 lg:py-32">
      <!-- Sophisticated multi-layer background -->
      <div class="absolute inset-0 bg-gradient-to-br from-[#0f1419] via-[#0a0e1a] to-[#0f1419]"></div>
      <div class="absolute inset-0 bg-gradient-radial from-[#38BDF8]/3 via-transparent to-transparent opacity-20"></div>
      
      <div class="relative max-w-[90rem] mx-auto px-6 md:px-12 lg:px-24">
        <!-- Mobile-First Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-10 gap-12 md:gap-16 lg:gap-24 items-center min-h-[75vh]">
          
          <!-- Content: Mobile-Optimized Typography -->
          <div class="lg:col-span-7 space-y-8 md:space-y-12">
            <!-- Mobile Hero Typography: Substantial & Readable -->
            <h1 class="text-5xl md:text-7xl lg:text-[84px] font-bold leading-[1.1] md:leading-[0.95] lg:leading-[0.85] text-white" style="letter-spacing: -0.025em;">
              The Signal.<br>
              Not the<br>
              <span class="text-[#38BDF8] inline-block" style="animation: pulse-glow 3s ease-in-out infinite;">Noise.</span>
            </h1>
            
            <!-- Mobile Supporting Copy: Generous Spacing -->
            <div class="space-y-6 md:space-y-8">
              <p class="text-xl md:text-[22px] text-[#c9d1d9] leading-[1.5] md:leading-[1.45] max-w-2xl" style="letter-spacing: -0.005em;">
                Strategic AI insights for executives who demand<br class="hidden md:block">
                substance over hype. Real frameworks. Measurable results.
              </p>
              
              <p class="text-lg md:text-[18px] text-[#8b949e] leading-[1.6] max-w-xl">
                Join 15,000+ leaders receiving weekly analysis that cuts through the AI noise with actionable intelligence.
              </p>
            </div>
            
            <!-- Mobile Premium CTA Group: Touch-Optimized -->
            <div class="flex flex-col gap-4 pt-8 md:pt-12">
              <a 
                href="#featured" 
                class="premium-cta w-full md:w-auto inline-flex items-center justify-center gap-4 bg-[#38BDF8] text-[#0a0e1a] rounded-xl font-semibold transition-all duration-300 shadow-xl hover:shadow-2xl focus:outline-none focus:ring-2 focus:ring-[#38BDF8] focus:ring-offset-2 focus:ring-offset-[#0a0e1a] h-14 md:h-16 px-8 text-lg md:text-xl"
                onmouseover="this.style.backgroundColor='#7DD3FC'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 25px 50px -12px rgba(56, 189, 248, 0.25)'"
                onmouseout="this.style.backgroundColor='#38BDF8'; this.style.transform='translateY(0)'; this.style.boxShadow='0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)'"
              >
                Read Premium Insights
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              
              <a 
                href="#newsletter" 
                class="secondary-cta w-full md:w-auto inline-flex items-center justify-center gap-3 border-2 border-[#38BDF8]/20 text-[#c9d1d9] rounded-xl font-medium transition-all duration-300 hover:border-[#38BDF8]/40 hover:bg-[#38BDF8]/5 h-14 md:h-16 px-8 text-lg md:text-xl"
              >
                Get Weekly Updates
              </a>
            </div>
          </div>
          
          <!-- Right: Sophisticated SVG Composition (30%) -->
          <div class="lg:col-span-3 flex justify-center lg:justify-end">
            <div class="relative w-96 h-96">
              <!-- Premium Line-Based Composition -->
              <svg class="absolute inset-0 w-full h-full" viewBox="0 0 384 384" fill="none">
                <!-- Mathematical Grid Foundation -->
                <defs>
                  <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#38BDF8;stop-opacity:0.8" />
                    <stop offset="50%" style="stop-color:#7DD3FC;stop-opacity:1.0" />
                    <stop offset="100%" style="stop-color:#38BDF8;stop-opacity:0.6" />
                  </linearGradient>
                  
                  <filter id="glow">
                    <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
                    <feMerge> 
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- Primary Grid Structure -->
                <g stroke="#38BDF8" stroke-width="1" fill="none" opacity="0.6">
                  <!-- Horizontal lines with mathematical spacing -->
                  <line x1="64" y1="96" x2="320" y2="96" />
                  <line x1="64" y1="144" x2="320" y2="144" />
                  <line x1="64" y1="192" x2="320" y2="192" />
                  <line x1="64" y1="240" x2="320" y2="240" />
                  <line x1="64" y1="288" x2="320" y2="288" />
                  
                  <!-- Vertical lines -->
                  <line x1="96" y1="64" x2="96" y2="320" />
                  <line x1="144" y1="64" x2="144" y2="320" />
                  <line x1="192" y1="64" x2="192" y2="320" />
                  <line x1="240" y1="64" x2="240" y2="320" />
                  <line x1="288" y1="64" x2="288" y2="320" />
                </g>
                
                <!-- Secondary Grid for Depth -->
                <g stroke="#7DD3FC" stroke-width="0.5" fill="none" opacity="0.3">
                  <!-- Additional grid lines for complexity -->
                  <line x1="80" y1="80" x2="304" y2="80" />
                  <line x1="80" y1="304" x2="304" y2="304" />
                  <line x1="80" y1="80" x2="80" y2="304" />
                  <line x1="304" y1="80" x2="304" y2="304" />
                </g>
                
                <!-- Sophisticated Focal Elements -->
                <g filter="url(#glow)">
                  <!-- Central prominence -->
                  <rect x="176" y="176" width="32" height="32" fill="#38BDF8" opacity="0.8" rx="4" />
                  
                  <!-- Secondary elements with strategic placement -->
                  <circle cx="96" cy="144" r="6" fill="#7DD3FC" opacity="0.6" />
                  <circle cx="240" cy="240" r="4" fill="#38BDF8" opacity="0.7" />
                  <rect x="286" y="94" width="6" height="6" fill="#38BDF8" opacity="0.5" rx="1" />
                  
                  <!-- Connecting elements -->
                  <line x1="102" y1="144" x2="176" y2="192" stroke="#38BDF8" stroke-width="2" opacity="0.5" />
                  <line x1="208" y1="192" x2="240" y2="240" stroke="#7DD3FC" stroke-width="1.5" opacity="0.6" />
                </g>
                
                <!-- Subtle Animation Elements -->
                <g opacity="0.2">
                  <circle cx="320" cy="96" r="2" fill="#38BDF8">
                    <animate attributeName="opacity" values="0.2;0.6;0.2" dur="3s" repeatCount="indefinite" />
                  </circle>
                  <circle cx="64" cy="288" r="1.5" fill="#7DD3FC">
                    <animate attributeName="opacity" values="0.3;0.7;0.3" dur="4s" repeatCount="indefinite" />
                  </circle>
                </g>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 1: LATEST INSIGHTS - Mobile Premium -->
    <section id="latest-insights" class="relative py-16 md:py-24 lg:py-32">
      <!-- Sophisticated multi-layer background -->
      <div class="absolute inset-0 bg-gradient-to-b from-[#0a0e1a] via-[#0f1419] to-[#0a0e1a] opacity-70"></div>
      <div class="absolute inset-0 bg-gradient-radial from-[#38BDF8]/4 via-transparent to-transparent opacity-30"></div>
      
      <div class="relative max-w-[90rem] mx-auto px-6 md:px-12 lg:px-24">
        
        <!-- Mobile Premium Section Header -->
        <div class="mb-12 md:mb-16 lg:mb-20 animate-fade-in-up">
          <div class="inline-flex items-center gap-4 mb-6 md:mb-8">
            <div class="w-12 md:w-20 h-px bg-gradient-to-r from-transparent via-[#38BDF8] to-[#38BDF8]/60"></div>
            <span class="text-[#38BDF8] text-sm md:text-base font-semibold uppercase tracking-[0.12em]">Latest Insights</span>
            <div class="w-12 md:w-20 h-px bg-gradient-to-l from-transparent via-[#38BDF8] to-[#38BDF8]/60"></div>
          </div>
          <h2 class="text-4xl md:text-5xl lg:text-[55px] font-bold text-white leading-[1.2] md:leading-[1.1] lg:leading-[1.05] max-w-5xl" style="letter-spacing: -0.02em;">
            What's this person thinking about now?
          </h2>
          <p class="text-lg md:text-xl lg:text-[20px] text-[#8b949e] leading-[1.6] max-w-4xl mt-6 md:mt-8" style="letter-spacing: -0.005em;">
            Fresh strategic analysis, real-time insights, and cutting-edge frameworks for navigating the AI transformation.
          </p>
        </div>
        
        <!-- HERO FEATURED: Mobile-Optimized Card -->
        <div class="relative mb-12 md:mb-16 lg:mb-20" style="animation: scale-in 0.8s ease-out;">
          <!-- Mobile Premium Badge -->
          <div class="absolute -top-6 md:-top-10 left-6 md:left-12 z-30">
            <div class="bg-gradient-to-r from-[#38BDF8] to-[#7DD3FC] text-[#0a0e1a] px-6 md:px-10 py-3 md:py-5 rounded-full text-xs md:text-sm font-bold uppercase tracking-[0.08em] shadow-2xl" style="box-shadow: 0 0 40px rgba(56, 189, 248, 0.5), 0 0 80px rgba(56, 189, 248, 0.25);">
              Latest Post
            </div>
          </div>
          
          <!-- Mobile Premium Featured Card -->
          <div 
            class="relative rounded-2xl md:rounded-3xl border transition-all duration-500 group shadow-2xl overflow-hidden p-6 md:p-12 lg:p-20 min-h-[24rem] md:min-h-[28rem]"
            style="
              background: linear-gradient(135deg, #1a202c 0%, #161b22 40%, #1a202c 100%);
              border: 2px solid rgba(56, 189, 248, 0.25);
              box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(56, 189, 248, 0.15);
            "
            onmouseover="
              this.style.borderColor='rgba(56, 189, 248, 0.45)';
              this.style.transform='translateY(-12px)';
              this.style.boxShadow='0 40px 80px rgba(0, 0, 0, 0.5), 0 0 60px rgba(56, 189, 248, 0.2)';
            "
            onmouseout="
              this.style.borderColor='rgba(56, 189, 248, 0.25)';
              this.style.transform='translateY(0)';
              this.style.boxShadow='0 30px 60px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(56, 189, 248, 0.15)';
            "
          >
            <!-- Subtle background texture (removed intrusive grid) -->
            <div class="absolute inset-0 opacity-[0.02]">
              <svg class="w-full h-full" viewBox="0 0 600 400" fill="none">
                <g stroke="#38BDF8" stroke-width="0.25">
                  <!-- Only subtle corner accents -->
                  <circle cx="50" cy="50" r="2" />
                  <circle cx="550" cy="350" r="2" />
                  <rect x="500" y="50" width="3" height="3" rx="1" />
                </g>
              </svg>
            </div>
            
            <!-- Mobile-First Content Layout -->
            <div class="relative grid grid-cols-1 gap-8 md:gap-12">
              
              <!-- Mobile Premium Content -->
              <div class="space-y-6 md:space-y-8">
                <div class="flex flex-wrap items-center gap-2 md:gap-4">
                  <time class="text-[#8b949e] text-sm md:text-base font-medium">Jun 30, 2025</time>
                  <div class="w-1.5 h-1.5 bg-[#38BDF8] rounded-full"></div>
                  <span class="text-[#38BDF8] text-xs md:text-sm font-semibold uppercase tracking-wider">Current Analysis</span>
                </div>
                
                <!-- Mobile Substantial Headlines -->
                <h3 class="text-3xl md:text-4xl lg:text-[48px] font-bold text-white leading-[1.2] md:leading-[1.1] group-hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.02em;">
                  {recentPosts[0].title.replace(/\n/g, ' ')}
                </h3>
                
                <!-- Mobile Readable Description -->
                <p class="text-lg md:text-xl lg:text-[22px] text-[#c9d1d9] leading-[1.6] max-w-4xl" style="letter-spacing: -0.005em;">
                  {recentPosts[0].description.replace(/\n/g, ' ')}
                </p>
                
                <!-- Mobile Strategic Tags -->
                <div class="flex flex-wrap gap-2 md:gap-3 pt-4 md:pt-6">
                  <span class="px-3 md:px-4 py-2 bg-[#38BDF8]/12 border border-[#38BDF8]/25 rounded-lg text-[#38BDF8] text-xs md:text-sm font-medium">Strategic Framework</span>
                  <span class="px-3 md:px-4 py-2 bg-[#38BDF8]/12 border border-[#38BDF8]/25 rounded-lg text-[#38BDF8] text-xs md:text-sm font-medium">Current Analysis</span>
                  <span class="px-3 md:px-4 py-2 bg-[#38BDF8]/12 border border-[#38BDF8]/25 rounded-lg text-[#38BDF8] text-xs md:text-sm font-medium">Executive Intelligence</span>
                </div>
              </div>
              
              <!-- Mobile Premium CTAs -->
              <div class="flex flex-col gap-4 pt-4 md:pt-6">
                <!-- Primary CTA: Mobile Touch-Optimized -->
                <a 
                  href={recentPosts[0].postUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="premium-cta w-full inline-flex items-center justify-center gap-4 bg-[#38BDF8] text-[#0a0e1a] rounded-xl font-semibold transition-all duration-300 shadow-xl hover:shadow-2xl focus:outline-none focus:ring-2 focus:ring-[#38BDF8] focus:ring-offset-2 focus:ring-offset-[#1a202c] h-14 md:h-16 text-lg md:text-xl"
                  onmouseover="
                    this.style.backgroundColor='#7DD3FC'; 
                    this.style.transform='translateY(-3px)';
                    this.style.boxShadow='0 30px 60px -12px rgba(56, 189, 248, 0.3)';
                  "
                  onmouseout="
                    this.style.backgroundColor='#38BDF8'; 
                    this.style.transform='translateY(0)';
                    this.style.boxShadow='0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)';
                  "
                >
                  Read Latest Analysis
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
                
                <!-- Secondary CTA: Mobile Touch-Optimized -->
                <button class="secondary-cta w-full inline-flex items-center justify-center gap-3 border-2 border-[#38BDF8]/20 text-[#c9d1d9] rounded-xl font-medium transition-all duration-300 hover:border-[#38BDF8]/40 hover:bg-[#38BDF8]/8 h-12 md:h-14 text-base md:text-lg">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                  Save for Later
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
        
            <!-- Recent Posts Grid: Additional Insights from Latest Section -->
        {recentPosts.length > 1 && (
          <div style="margin-top: 5rem;">
            <!-- Elegant section transition with mathematical precision -->
            <div class="flex items-center gap-12 mb-16">
              <div class="h-px bg-gradient-to-r from-transparent via-[#38BDF8]/40 to-[#38BDF8]/20 flex-1"></div>
              <span class="text-[#c9d1d9] text-sm font-semibold uppercase tracking-[0.1em] px-8">Additional Recent Insights</span>
              <div class="h-px bg-gradient-to-l from-transparent via-[#38BDF8]/40 to-[#38BDF8]/20 flex-1"></div>
            </div>
            
            <!-- Premium asymmetrical grid: 8-span + 4-span + 6-span each -->
            <div class="space-y-12">
              
              <!-- First tier: Large Dominant (8-span) + Medium Supporting (4-span) -->
              <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
                
                <!-- Large dominant card with commanding presence -->
                <div class="lg:col-span-8">
                  <a 
                    href={recentPosts[1].postUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group block bg-gradient-to-br from-[#161b22] to-[#0f1419] rounded-2xl border border-white/8 hover:border-[#38BDF8]/30 transition-all duration-500 overflow-hidden shadow-xl hover:shadow-2xl"
                    style="min-height: 24rem;"
                    onmouseover="this.style.transform='translateY(-12px)'; this.style.boxShadow='0 35px 70px rgba(0, 0, 0, 0.25), 0 0 30px rgba(56, 189, 248, 0.1)';"
                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 25px 50px rgba(0, 0, 0, 0.15)';"
                  >
                    <!-- Content with sophisticated internal layout -->
                    <div class="p-10 h-full flex flex-col justify-between">
                      <div class="space-y-6">
                        <!-- Premium meta information -->
                        <div class="flex items-center gap-4">
                          <time class="text-[#8b949e] text-sm font-medium">Jun 29, 2025</time>
                          <div class="w-1 h-1 bg-[#38BDF8] rounded-full"></div>
                          <span class="text-[#38BDF8] text-sm font-medium">Strategic Analysis</span>
                        </div>
                        
                        <!-- Commanding headline -->
                        <h4 class="text-[35px] font-bold text-white leading-[1.2] group-hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.015em;">
                          {recentPosts[1].title.replace(/\n/g, ' ')}
                        </h4>
                        
                        <!-- Rich description -->
                        <p class="text-[18px] text-[#c9d1d9] leading-[1.6] max-w-3xl">
                          {recentPosts[1].description.replace(/\n/g, ' ').substring(0, 160) + '...'}
                        </p>
                        
                        <!-- Strategic tags -->
                        <div class="flex gap-3 pt-4">
                          <span class="px-3 py-1 bg-[#38BDF8]/10 border border-[#38BDF8]/20 rounded-md text-[#38BDF8] text-xs font-medium">Strategic Insight</span>
                          <span class="px-3 py-1 bg-[#38BDF8]/10 border border-[#38BDF8]/20 rounded-md text-[#38BDF8] text-xs font-medium">Fresh Analysis</span>
                        </div>
                      </div>
                      
                      <!-- Premium footer with sophisticated interaction -->
                      <div class="flex items-center justify-between pt-8 border-t border-white/10">
                        <div class="flex items-center gap-6">
                          <span class="text-[#8b949e] text-sm">8 min read</span>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-[#8b949e]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            <span class="text-[#8b949e] text-sm">High Impact</span>
                          </div>
                        </div>
                        
                        <span class="text-[#38BDF8] text-sm font-medium group-hover:text-[#7DD3FC] transition-colors duration-300 flex items-center gap-3">
                          Read Analysis
                          <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                          </svg>
                        </span>
                      </div>
                    </div>
                  </a>
                </div>
                
                <!-- Medium supporting card with complementary design -->
                {recentPosts[2] && (
                  <div class="lg:col-span-4">
                    <a 
                      href={recentPosts[2].postUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="group block bg-gradient-to-br from-[#0f1419] to-[#161b22] rounded-xl border border-white/5 hover:border-[#38BDF8]/25 transition-all duration-400 overflow-hidden shadow-lg hover:shadow-xl"
                      style="min-height: 24rem;"
                      onmouseover="this.style.transform='translateY(-8px)'; this.style.borderColor='rgba(56, 189, 248, 0.25)';"
                      onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='rgba(255, 255, 255, 0.05)';"
                    >
                      <div class="p-8 h-full flex flex-col justify-between">
                        <div class="space-y-5">
                          <div class="flex items-center gap-3">
                            <time class="text-[#8b949e] text-xs font-medium">Jun 28, 2025</time>
                            <span class="text-[#38BDF8] text-xs font-medium">Quick Read</span>
                          </div>
                          
                          <h4 class="text-[22px] font-bold text-white leading-[1.3] group-hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.01em;">
                            {recentPosts[2].title.replace(/\n/g, ' ')}
                          </h4>
                          
                          <p class="text-[16px] text-[#c9d1d9] leading-[1.5]">
                            {recentPosts[2].description.replace(/\n/g, ' ').substring(0, 120) + '...'}
                          </p>
                        </div>
                        
                        <div class="flex items-center justify-between pt-6 border-t border-white/8">
                          <span class="text-[#8b949e] text-xs">5 min read</span>
                          <svg class="w-4 h-4 text-[#38BDF8] group-hover:text-[#7DD3FC] transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                          </svg>
                        </div>
                      </div>
                    </a>
                  </div>
                )}
              </div>
              
              <!-- Second tier: Two sophisticated small cards (6-span each) -->
              {recentPosts.length > 3 && (
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
                  
                  {recentPosts.slice(3, 5).map((post: any, index: number) => (
                    <div>
                      <a 
                        href={post.postUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="group block bg-[#161b22] rounded-xl border border-white/5 hover:border-[#38BDF8]/20 transition-all duration-300 overflow-hidden shadow-md hover:shadow-lg"
                        style="min-height: 16rem;"
                        onmouseover="this.style.transform='translateY(-4px)';"
