---
// Premium index page with sophisticated asymmetrical layouts
import Layout from '@/layouts/Layout.astro';
import SubstackCard from '@/components/SubstackCard.astro';
import topPosts from '@/content/top_posts.json';
import recentPosts from '@/content/recent_posts.json';
import Card from '@/components/Card.astro';
import Hero from '@/components/Hero.astro';
// Define toolkitLinks inline since JSON file is missing
const toolkitLinks = topPosts.slice(0, 6).map(post => ({
  url: post.postUrl,
  title: post.title,
  description: post.description.replace(/\n/g, ' ').substring(0, 100) + '...'
}));
---

<Layout>
  <!-- HERO SECTION -->
  <Hero />
  
  <!-- NOTE: All specified removals and restructurings from the Architect's annotations have been executed. -->
  <!-- Redundant sections have been purged and component-level noise has been stripped. -->

  <!-- SECTION 1: LATEST INSIGHTS - Refined -->
  <section id="latest-insights" class="relative py-20 md:py-32 lg:py-40">
    <!-- Sophisticated multi-layer background -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0e1a] via-[#0f1419] to-[#0a0e1a] opacity-70"></div>
    <div class="absolute inset-0 bg-gradient-radial from-[#38BDF8]/4 via-transparent to-transparent opacity-30"></div>
    
    <div class="relative max-w-[90rem] mx-auto px-6 md:px-12 lg:px-24">
      
      <!-- Section Header -->
      <div class="mb-12 md:mb-16 lg:mb-20 animate-fade-in-up">
        <div class="inline-flex items-center gap-4 mb-6 md:mb-8">
          <div class="w-12 md:w-20 h-px bg-gradient-to-r from-transparent via-[#38BDF8] to-[#38BDF8]/60"></div>
          <span class="text-[#38BDF8] text-sm md:text-base font-semibold uppercase tracking-[0.12em]">Latest Insights</span>
          <div class="w-12 md:w-20 h-px bg-gradient-to-l from-transparent via-[#38BDF8] to-[#38BDF8]/60"></div>
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-[55px] font-bold text-cyan-100 leading-[1.2] md:leading-[1.1] lg:leading-[1.05] max-w-5xl" style="letter-spacing: -0.02em;">
          Fresh Off the Press
        </h2>
        <p class="text-lg md:text-xl lg:text-[20px] text-[#8b949e] leading-[1.6] max-w-4xl mt-6 md:mt-8" style="letter-spacing: -0.005em;">
          Fresh strategic analysis, real-time insights, and cutting-edge frameworks for navigating the AI transformation.
        </p>
      </div>
      
      <!-- HERO FEATURED: Refined Card -->
      <div class="relative mb-12 md:mb-16 lg:mb-20">
        <div class="absolute -top-6 md:-top-10 left-6 md:left-12 z-30">
          <div class="featured-badge">
            Latest Post
          </div>
        </div>
        
        <div class="featured-card p-6 md:p-12 lg:p-20 min-h-[24rem] md:min-h-[28rem]">
          <div class="relative grid grid-cols-1 gap-8 md:gap-12">
            <div class="space-y-6 md:space-y-8">
              <div class="flex flex-wrap items-center gap-2 md:gap-4">
                <time class="text-[#8b949e] text-sm md:text-base font-medium">Jun 30, 2025</time>
                <div class="w-1.5 h-1.5 bg-[#38BDF8] rounded-full"></div>
                <span class="text-[#38BDF8] text-xs md:text-sm font-semibold uppercase tracking-wider">Current Analysis</span>
              </div>
              <h3 class="text-3xl md:text-4xl lg:text-[48px] font-bold text-white leading-[1.2] md:leading-[1.1] hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.02em;">
                {recentPosts[0].title.replace(/\n/g, ' ')}
              </h3>
              <p class="text-lg md:text-xl lg:text-[22px] text-[#c9d1d9] leading-[1.6] max-w-4xl" style="letter-spacing: -0.005em;">
                {recentPosts[0].description.replace(/\n/g, ' ')}
              </p>
              <!-- REMOVED: Superfluous tags as per directive -->
            </div>
            
            <div class="flex flex-col gap-4 pt-4 md:pt-6">
              <a 
                href={recentPosts[0].postUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="primary-cta"
              >
                Read Latest Analysis
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              <!-- REMOVED: 'Save for Later' button as per directive -->
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recent Posts Grid: Refined -->
      {recentPosts.length > 1 && (
        <div style="margin-top: 5rem;">
          <div class="flex items-center gap-12 mb-16">
            <div class="h-px bg-gradient-to-r from-transparent via-[#38BDF8]/40 to-[#38BDF8]/20 flex-1"></div>
            <span class="text-[#c9d1d9] text-sm font-semibold uppercase tracking-[0.1em] px-8">Additional Recent Insights</span>
            <div class="h-px bg-gradient-to-l from-transparent via-[#38BDF8]/40 to-[#38BDF8]/20 flex-1"></div>
          </div>
          
          <div class="space-y-12">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
              <div class="lg:col-span-8">
                <a 
                  href={recentPosts[1].postUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="group block bg-gradient-to-br from-[#161b22] to-[#0f1419] rounded-2xl border border-white/8 hover:border-[#38BDF8]/30 transition-all duration-500 overflow-hidden shadow-xl hover:shadow-2xl"
                  style="min-height: 24rem;"
                  onmouseover="this.style.transform='translateY(-12px)'; this.style.boxShadow='0 35px 70px rgba(0, 0, 0, 0.25), 0 0 30px rgba(56, 189, 248, 0.1)';"
                  onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 25px 50px rgba(0, 0, 0, 0.15)';"
                >
                  <div class="p-10 h-full flex flex-col justify-between">
                    <div class="space-y-6">
                      <div class="flex items-center gap-4">
                        <time class="text-[#8b949e] text-sm font-medium">Jun 29, 2025</time>
                        <div class="w-1 h-1 bg-[#38BDF8] rounded-full"></div>
                        <span class="text-[#38BDF8] text-sm font-medium">Strategic Analysis</span>
                      </div>
                      <h4 class="text-[35px] font-bold text-white leading-[1.2] group-hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.015em;">
                        {recentPosts[1].title.replace(/\n/g, ' ')}
                      </h4>
                      <p class="text-[18px] text-[#c9d1d9] leading-[1.6] max-w-3xl">
                        {recentPosts[1].description.replace(/\n/g, ' ').substring(0, 160) + '...'}
                      </p>
                      <!-- REMOVED: Superfluous tags as per directive -->
                    </div>
                    
                    <div class="flex items-center justify-end pt-8 border-t border-white/10">
                      <!-- REMOVED: Metadata 'readTime' and 'High Impact' as per directive -->
                      <span class="text-[#38BDF8] text-sm font-medium group-hover:text-[#7DD3FC] transition-colors duration-300 flex items-center gap-3">
                        Read Analysis
                        <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                      </span>
                    </div>
                  </div>
                </a>
              </div>
              
              {recentPosts[2] && (
                <div class="lg:col-span-4">
                  <a 
                    href={recentPosts[2].postUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group block bg-gradient-to-br from-[#0f1419] to-[#161b22] rounded-xl border border-white/5 hover:border-[#38BDF8]/25 transition-all duration-400 overflow-hidden shadow-lg hover:shadow-xl"
                    style="min-height: 24rem;"
                    onmouseover="this.style.transform='translateY(-8px)'; this.style.borderColor='rgba(56, 189, 248, 0.25)';"
                    onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='rgba(255, 255, 255, 0.05)';"
                  >
                    <div class="p-8 h-full flex flex-col justify-between">
                      <div class="space-y-5">
                        <div class="flex items-center gap-3">
                          <time class="text-[#8b949e] text-xs font-medium">Jun 28, 2025</time>
                          <!-- REMOVED: 'Quick Read' tag as per directive -->
                        </div>
                        <h4 class="text-[22px] font-bold text-white leading-[1.3] group-hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.01em;">
                          {recentPosts[2].title.replace(/\n/g, ' ')}
                        </h4>
                        <p class="text-[16px] text-[#c9d1d9] leading-[1.5]">
                          {recentPosts[2].description.replace(/\n/g, ' ').substring(0, 120) + '...'}
                        </p>
                      </div>
                      
                      <div class="flex items-center justify-end pt-6 border-t border-white/8">
                        <!-- REMOVED: 'readTime' metadata as per directive -->
                        <svg class="w-4 h-4 text-[#38BDF8] group-hover:text-[#7DD3FC] transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                      </div>
                    </div>
                  </a>
                </div>
              )}
            </div>
            
            {recentPosts.length > 3 && (
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
                {recentPosts.slice(3, 5).map((post: any, index: number) => (
                  <div>
                    <a 
                      href={post.postUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="group block bg-[#161b22] rounded-xl border border-white/5 hover:border-[#38BDF8]/20 transition-all duration-300 overflow-hidden shadow-md hover:shadow-lg"
                      style="min-height: 16rem;"
                      onmouseover="this.style.transform='translateY(-4px)';"
                      onmouseout="this.style.transform='translateY(0)';"
                    >
                      <div class="p-6 h-full flex flex-col justify-between">
                        <div class="space-y-4">
                          <div class="flex items-center gap-2">
                            <time class="text-[#8b949e] text-xs">Jun {27 - index}, 2025</time>
                            <!-- REMOVED: 'Insight' tag as per directive -->
                          </div>
                          <h4 class="text-[18px] font-semibold text-white leading-[1.4] group-hover:text-[#c9d1d9] transition-colors duration-300" style="letter-spacing: -0.005em;">
                            {post.title.replace(/\n/g, ' ')}
                          </h4>
                          <p class="text-[14px] text-[#8b949e] leading-[1.5]">
                            {post.description.replace(/\n/g, ' ').substring(0, 100) + '...'}
                          </p>
                        </div>
                        <div class="flex items-center justify-end pt-4">
                          <!-- REMOVED: 'readTime' metadata as per directive -->
                          <svg class="w-3 h-3 text-[#38BDF8] group-hover:text-[#7DD3FC] transition-all duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                          </svg>
                        </div>
                      </div>
                    </a>
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- SECTION 2: ESSENTIAL READING - Refined -->
  <section id="essential-reading" class="relative py-24 md:py-36 lg:py-44">
    <div class="absolute inset-0 bg-gradient-to-b from-[#0f1419] via-[#161b22] to-[#0f1419] opacity-80"></div>
    <div class="relative max-w-[90rem] mx-auto px-6 md:px-12 lg:px-24">
      
      <div class="mb-12 md:mb-16 lg:mb-20 animate-fade-in-up">
        <div class="inline-flex items-center gap-4 mb-6 md:mb-8">
          <div class="w-12 md:w-20 h-px bg-gradient-to-r from-transparent via-[#8b949e]/40 to-[#8b949e]/20"></div>
          <span class="text-[#8b949e] text-sm md:text-base font-semibold uppercase tracking-[0.12em]">Essential Reading</span>
          <div class="w-12 md:w-20 h-px bg-gradient-to-l from-transparent via-[#8b949e]/40 to-[#8b949e]/20"></div>
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-[55px] font-bold text-[#c9d1d9] leading-[1.2] md:leading-[1.1] lg:leading-[1.05] max-w-5xl" style="letter-spacing: -0.02em;">
          Foundational Archive
        </h2>
        <p class="text-lg md:text-xl lg:text-[20px] text-[#8b949e] leading-[1.6] max-w-4xl mt-6 md:mt-8" style="letter-spacing: -0.005em;">
          Core insights and frameworks that form the foundation of strategic AI thinking.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {topPosts.map((post: any, index: number) => (
          <div class={index === 0 ? "md:col-span-2 lg:col-span-1" : ""}>
            <Card
              postUrl={post.postUrl}
              title={post.title.replace(/\n/g, ' ')}
              description={post.description.replace(/\n/g, ' ').substring(0, 140) + '...'}
              variant={index === 0 ? 'elevated' : 'default'}
              size={index === 0 ? 'lg' : 'md'}
            />
          </div>
        ))}
      </div>
    </div>
  </section>



  <!-- ABOUT: Mobile Premium Brand Presentation -->
  <section id="about" class="py-16 md:py-24 lg:py-32 relative">
    <div class="max-w-[90rem] mx-auto px-6 md:px-12 lg:px-24">
      <div class="max-w-5xl mx-auto">
        <!-- Mobile-First Asymmetrical Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 md:gap-16 items-center">
          
          <!-- Left: Mobile Premium Brand Story (70%) -->
          <div class="lg:col-span-8 space-y-6 md:space-y-8">
            <div class="space-y-4 md:space-y-6">
              <div class="inline-flex items-center gap-3 mb-4">
                <div class="w-8 md:w-12 h-px bg-[#38BDF8]"></div>
                <span class="text-[#38BDF8] text-sm md:text-base font-semibold uppercase tracking-wider">About Nate</span>
              </div>
              
              <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">
                Clarity in complexity.<br>
                Strategy in chaos.
              </h2>
            </div
            
            <div class="space-y-4 md:space-y-6 text-base md:text-lg lg:text-xl text-[#c9d1d9] leading-relaxed">
              <p>
                I help leaders cut through AI hype and build sustainable competitive advantages. 
                Former product executive, current strategic advisor to companies navigating the AI transformation.
              </p>
              <p class="text-[#8b949e]">
                My frameworks focus on practical implementation over theoretical possibilities. 
                Real results for teams who demand substance over buzzwords.
              </p>
            </div>
            
            <!-- Mobile Premium CTA -->
            <div class="pt-6 md:pt-8">
              <a 
                href="/about"
                class="inline-flex items-center gap-3 text-[#38BDF8] text-base md:text-lg font-semibold hover:text-[#7DD3FC] transition-colors duration-200"
              >
                Learn more about my work
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Right: Mobile Sophisticated Element (30%) -->
          <div class="lg:col-span-4 flex justify-center">
            <div class="w-40 h-40 md:w-48 md:h-48 rounded-2xl bg-gradient-to-br from-[#1a202c] to-[#161b22] border border-[#38BDF8]/20 flex items-center justify-center">
              <div class="w-12 h-12 md:w-16 md:h-16 rounded-xl bg-[#38BDF8]/20 border border-[#38BDF8]/40 flex items-center justify-center">
                <div class="w-5 h-5 md:w-6 md:h-6 bg-[#38BDF8] rounded-lg"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SOCIAL LINKS -->
  <section class="py-16 bg-[#0f1419]">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-2xl font-bold text-white mb-8">Connect & Follow</h2>
      <div class="flex justify-center gap-4">
        <a href="https://www.tiktok.com/@nate.b.jones" target="_blank" class="w-12 h-12 bg-[#161b22] hover:bg-[#1a202c] text-[#c9d1d9] hover:text-white rounded-lg flex items-center justify-center transition-all hover:-translate-y-1">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43V7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.43z"/></svg>
        </a>
        <a href="https://x.com/natebjones" target="_blank" class="w-12 h-12 bg-[#161b22] hover:bg-[#1a202c] text-[#c9d1d9] hover:text-white rounded-lg flex items-center justify-center transition-all hover:-translate-y-1">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <a href="https://www.youtube.com/@NateBJones" target="_blank" class="w-12 h-12 bg-[#161b22] hover:bg-[#1a202c] text-[#c9d1d9] hover:text-white rounded-lg flex items-center justify-center transition-all hover:-translate-y-1">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
        </a>
        <a href="https://www.linkedin.com/in/natebjones/" target="_blank" class="w-12 h-12 bg-[#161b22] hover:bg-[#1a202c] text-[#c9d1d9] hover:text-white rounded-lg flex items-center justify-center transition-all hover:-translate-y-1">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
        <a href="https://natesnewsletter.substack.com/" target="_blank" class="w-12 h-12 bg-[#38BDF8] hover:bg-[#7DD3FC] text-[#0a0e1a] rounded-lg flex items-center justify-center transition-all hover:-translate-y-1">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/></svg>
        </a>
      </div>
    </div>
  </section>
</Layout>